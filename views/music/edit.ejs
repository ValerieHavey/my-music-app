<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/_head.ejs') %>
    <title>Edit <%=` ${music.songName} by ${music.artistName}` %></title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <main>
      <h1>Edit <%=` ${music.songName} by ${music.artistName}` %></h1>

      <form
        action="/users/<%= user._id %>/music/<%= music._id %>?_method=PUT"
        method="POST"
      >
        <div>
          <label for="artistName">Artist Name:</label>
          <input
            type="text"
            name="artistName"
            id="artistName"
            value="<%= music.artistName %>"
          />
        </div>

        <div>
          <label for="songName">Song Name:</label>
          <input
            type="text"
            name="songName"
            id="songName"
            value="<%= music.songName %>"
          />
        </div>

        <div>
          <label for="genre">Genre:</label>
          <input
            type="text"
            name="genre"
            id="genre"
            value="<%= music.genre %>"
          />
        </div>

        <div>
          <button type="submit">Edit Song</button>
        </div>
      </form>
    </main>
  </body>
</html>
